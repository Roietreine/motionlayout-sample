<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="4000">
        <KeyFrameSet>

            <KeyAttribute
                android:scaleX="1.3"
                motion:framePosition="0"
                motion:motionTarget="@+id/ivFirstCircle" />
            <KeyAttribute
                android:scaleY="1.3"
                motion:framePosition="0"
                motion:motionTarget="@+id/ivFirstCircle" />
            <KeyAttribute
                android:scaleX="0.6"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivFirstCircle" />
            <KeyAttribute
                android:scaleY="0.6"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivFirstCircle" />
            <KeyAttribute
                android:scaleX="1.2"
                motion:framePosition="0"
                motion:motionTarget="@+id/ivSecondCircle" />
            <KeyAttribute
                android:scaleY="1.2"
                motion:framePosition="0"
                motion:motionTarget="@+id/ivSecondCircle" />
            <KeyAttribute
                android:scaleX="0.7"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivSecondCircle" />
            <KeyAttribute
                android:scaleY="0.7"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivSecondCircle" />

            <KeyAttribute
                android:scaleX="1.1"
                motion:framePosition="0"
                motion:motionTarget="@+id/ivThirdCircle" />

            <KeyAttribute
                android:scaleY="1.1"
                motion:framePosition="0"
                motion:motionTarget="@+id/ivThirdCircle" />
            <KeyAttribute
                android:scaleX="0.8"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivThirdCircle" />
            <KeyAttribute
                android:scaleY="0.8"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivThirdCircle" />

            <KeyAttribute
                android:scaleX="1.0"
                motion:framePosition="0"
                motion:motionTarget="@+id/ivFourthCircle" />

            <KeyAttribute
                android:scaleY="1.0"
                motion:framePosition="0"
                motion:motionTarget="@+id/ivFourthCircle" />

            <KeyAttribute
                android:scaleX="0.9"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivFourthCircle" />
            <KeyAttribute
                android:scaleY="0.9"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivFourthCircle" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/ivLogo" />

            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="100"
                motion:motionTarget="@+id/ivLogo" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start"/>
    <ConstraintSet android:id="@+id/end"/>

</MotionScene>